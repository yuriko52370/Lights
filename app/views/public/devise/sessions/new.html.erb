<div class="container">
  <div class="coi-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
    <h2>Log in</h2>
      <div class="mx-auto text-center">

        <%= form_with model: @user, url: user_session_path local: true do |f| %>
        <div class="input-group-prepend">
          <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
        </div>
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "ユーザー名" %>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <div>
          <%= f.submit "サインイン", class:"btn btn-lg btn-block btn-info mt-5" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>